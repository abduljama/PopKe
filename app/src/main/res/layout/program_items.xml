<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:id="@+id/news_card" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/main_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            android:src="@drawable/pope_francis"
            android:scaleType="fitXY"
            android:id="@+id/image" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#4D000000"
            android:layout_alignBottom="@+id/image"
            android:id="@+id/pTitle_main">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="6dp"
            android:text="Holy Mass "
            android:textColor="@color/windowBackground"
            android:textSize="30dp"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/pTitle"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center|fill_vertical" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:id="@+id/program_desc"
            android:textSize="16dp"
            android:visibility="invisible"

            android:background="@color/windowBackground"
            android:text="@string/program_one"
            android:textStyle="bold"

            android:layout_below="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Venue : University of Nairobi "
            android:textStyle="bold"
            android:textSize="12dp"
            android:id="@+id/pVenue"
            android:layout_below="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time : 08:00 - 10:00 AM "
            android:textSize="12dp"
            android:id="@+id/time"
            android:textStyle="bold"
            android:layout_below="@+id/pVenue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />



        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Show Direction"-->
            <!--android:clickable="true"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:textColor="#0864f7"-->
            <!--android:id="@+id/showDirection"-->
            <!--android:layout_below="@+id/time"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:textSize="14dp" />-->


    </RelativeLayout>

</android.support.v7.widget.CardView>


